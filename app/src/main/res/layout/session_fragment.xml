<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:id="@+id/session_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session Start Time"
        android:id="@+id/start_time"
        android:hint="@string/accept"
        android:layout_below="@+id/session_name_title"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session End Time"
        android:id="@+id/end_time"
        android:hint="@string/accept"
        android:layout_below="@+id/start_time"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Session"
        android:id="@+id/save_session_button"
        android:layout_below="@+id/end_time"
        android:layout_alignParentStart="true"/>
</RelativeLayout>